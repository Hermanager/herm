    script.
        $(window).scroll( function() {
            var scrollPosition = $(window).scrollTop();
            if(scrollPosition <=80) {
                $("#scroll2").hide();
                $("#scroll1").show();
                //show text
            } 
            else if (scrollPosition >80) {
                
                $("#scroll2").show();
                $("#scroll1").hide();
                //show logo
            }
